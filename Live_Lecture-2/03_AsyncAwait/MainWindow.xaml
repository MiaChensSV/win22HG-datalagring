<Window x:Class="_03_AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_03_AsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Button Name="BtnBlockingCode" Click="BtnBlockingCode_Click" Content="Blocking Code" Padding="10" Margin="0 0 0 10" />
            <Button Name="BtnNonBlockingCode" Click="BtnNonBlockingCode_Click" Content="Non-Blocking Code" Padding="10" Margin="0 0 0 20" />
        </StackPanel>
        <TextBlock Name="TBlockResult" Grid.Row="1" />
    </Grid>
</Window>
